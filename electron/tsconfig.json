{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true
  },
  "include": [
    "main.ts",
    "preload.ts",
    "memory.ts",
    "memory-parser.ts",
    "types/**/*.ts",
    "constants/**/*.ts",
    "utils/**/*.ts",
    "core/**/*.ts",
    "services/**/*.ts",
    "handlers/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
