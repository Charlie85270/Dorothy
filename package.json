{
  "name": "claude-mgr",
  "version": "0.0.11",
  "private": true,
  "main": "electron/dist/main.js",
  "scripts": {
    "dev": "next dev",
    "dev:network": "next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron:start\"",
    "electron:start": "wait-on http://localhost:3000 && tsc -p electron/tsconfig.json && NODE_ENV=development electron .",
    "electron:build": "mv src/app/api src/app/_api_backup && mv src/app/icon.tsx src/app/_icon_backup.tsx 2>/dev/null; ELECTRON_BUILD=1 next build; mv src/app/_api_backup src/app/api && mv src/app/_icon_backup.tsx src/app/icon.tsx 2>/dev/null; tsc -p electron/tsconfig.json && cd mcp-orchestrator && npm install && npm run build && cd .. && cd mcp-telegram && npm install && npm run build && cd .. && cd mcp-kanban && npm install && npm run build && cd .. && electron-builder --mac",
    "electron:pack": "tsc -p electron/tsconfig.json && cd mcp-orchestrator && npm install && npm run build && cd .. && cd mcp-telegram && npm install && npm run build && cd .. && cd mcp-kanban && npm install && npm run build && cd .. && electron-builder --dir --mac"
  },
  "build": {
    "appId": "com.octav.claudemgr",
    "productName": "claude.mgr",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/dist/**/*",
      "electron/resources/**/*",
      "out/**/*",
      "mcp-orchestrator/dist/**/*",
      "mcp-orchestrator/package.json",
      "mcp-orchestrator/node_modules/**/*",
      "mcp-telegram/dist/**/*",
      "mcp-telegram/package.json",
      "mcp-telegram/node_modules/**/*",
      "mcp-kanban/dist/**/*",
      "mcp-kanban/package.json",
      "mcp-kanban/node_modules/**/*",
      "node_modules/**/*",
      "skills/**/*",
      "hooks/**/*"
    ],
    "asarUnpack": [
      "out/**/*",
      "hooks/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/node-pty/**/*"
    ],
    "extraResources": [
      {
        "from": "mcp-orchestrator",
        "to": "mcp-orchestrator",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "mcp-telegram",
        "to": "mcp-telegram",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "mcp-kanban",
        "to": "mcp-kanban",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "title": "claude.mgr",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "better-sqlite3": "^11.0.0",
    "call-bind": "^1.0.8",
    "call-bind-apply-helpers": "^1.0.2",
    "dunder-proto": "^1.0.1",
    "framer-motion": "^12.29.0",
    "get-intrinsic": "^1.3.0",
    "get-proto": "^1.0.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.4",
    "node-pty": "^1.1.0",
    "node-telegram-bot-api": "^0.67.0",
    "@slack/bolt": "^4.0.1",
    "prism-react-renderer": "^2.4.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "set-function-length": "^1.2.2",
    "three": "^0.182.0",
    "uuid": "^9.0.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20",
    "@types/node-telegram-bot-api": "^0.64.13",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^9.0.8",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "sharp": "^0.34.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  }
}
